{
    "name": "jordisala1991/archetype-sonata",
    "type": "project",
    "description": "This is my Sonata project template",
    "homepage": "https://github.com/jordisala1991/ArchetypeSonata",
    "license": "MIT",
    "authors": [
        {
            "name": "Jordi Sala Morales",
            "email": "jordism91@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3",
        "doctrine/doctrine-bundle": "2.1.2",
        "doctrine/doctrine-migrations-bundle": "2.1.2",
        "doctrine/orm": "2.7.3",
        "friendsofsymfony/ckeditor-bundle": "1.2.0",
        "friendsofsymfony/user-bundle": "2.1.2",
        "sonata-project/admin-bundle": "3.75.0",
        "sonata-project/block-bundle": "3.21.0",
        "sonata-project/core-bundle": "3.20.0",
        "sonata-project/doctrine-orm-admin-bundle": "3.24.0",
        "sonata-project/easy-extends-bundle": "2.5.0",
        "sonata-project/formatter-bundle": "4.3.0",
        "sonata-project/media-bundle": "3.27.0",
        "sonata-project/user-bundle": "4.8.0",
        "symfony/dotenv": "5.1.6",
        "symfony/flex": "1.9.4",
        "symfony/framework-bundle": "4.4.13",
        "symfony/monolog-bundle": "3.5.0",
        "symfony/security-bundle": "4.4.14",
        "symfony/swiftmailer-bundle": "3.5.0",
        "symfony/twig-bundle": "4.4.16",
        "symfony/yaml": "5.1.6",
        "twig/twig": "2.13.1"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "2.8.2",
        "friendsofphp/php-cs-fixer": "2.16.4",
        "phpstan/phpstan": "0.12.52",
        "phpstan/phpstan-doctrine": "0.12.22",
        "phpstan/phpstan-symfony": "0.12.10",
        "symfony/debug-bundle": "5.1.8",
        "symfony/web-profiler-bundle": "5.0.11",
        "vimeo/psalm": "3.13.1",
        "weirdan/doctrine-psalm-plugin": "0.11.3"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "^4.4 || ^5.0"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "auto-scripts": {
            "ckeditor:install": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "lint-twig": "bin/console lint:twig templates",
        "lint-yaml": "bin/console lint:yaml config src translations --parse-tags",
        "php-cs-fixer": "php-cs-fixer fix --ansi --verbose",
        "phpstan": "phpstan analyse --no-progress",
        "psalm": "psalm --stats"
    }
}
